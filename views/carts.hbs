

<div class="entry mt-4">
  {{#if productos}}
  <div class="  p-1 border border-dark border-3 rounded">
    <table class="  table table-resposive ">
      <thead class="thead-dark text-light bg-primary">
        <tr>
          <th scope="col">id</th>
          <th scope="col">Nombre</th>
          <th scope="col">Precio</th>
          <th scope="col">Stock</th>
          <th scope="col">Imagen</th>
        </tr>
      </thead>
      <tbody id="prodDisplay">
        {{#each productos}}
        <tr class="table">
          <th>{{ this.id }}</th>
          <td>{{ this._id }}</td>
          <td>{{ this.precio }}</td>
          <td>{{ this.stock }}</td>
          <td><img src="{{ this.thumbnail }}" width="50"></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{else}}
    <br>
    <h3> No hay ning√∫n producto agregado. </h3>
    {{/if}}
  </div>
</div>